<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_message_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/neo_background_color">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/neo_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_layer_type="hardware"
        app:neomorph_shadow_type="inner"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="8dp"
        app:neomorph_background_color="@color/neo_background_color"
        app:neomorph_shadow_color="@color/neo_shadow_color"
        app:neomorph_highlight_color="@color/neo_highlight_color">
        <TextView android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:textColor="@color/light_neo_background_color"
            android:textStyle="bold"
            android:textSize="40sp"
            android:fontFamily="sans-serif-thin"
            android:hint="@string/message_hint"
            android:textColorHint="@color/neo_highlight_color"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/neo_text_message"
        android:weightSum="5.5"
        android:layout_centerVertical="true"
        android:baselineAligned="false">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:neomorph_view_type="circular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="4dp"
        app:neomorph_corner_radius="16dp"
        app:neomorph_background_color="@color/neo_background_color"
        app:neomorph_shadow_color="@color/neo_shadow_color"
        app:neomorph_highlight_color="@color/neo_highlight_color">
        <ImageButton android:id="@+id/button_message3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_water"
            android:background="@null"
            android:contentDescription="@string/water_button_description"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:neomorph_view_type="circular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="0dp"
            app:neomorph_background_color="@color/neo_background_color"
            app:neomorph_shadow_color="@color/neo_shadow_color"
            app:neomorph_highlight_color="@color/neo_highlight_color">
            <ImageButton android:id="@+id/button_message4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_food"
                android:background="@null"
                android:contentDescription="@string/food_button_description"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="0dp"
            app:neomorph_view_type="circular"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="0dp"
            app:neomorph_background_color="@color/neo_background_color"
            app:neomorph_shadow_color="@color/neo_shadow_color"
            app:neomorph_highlight_color="@color/neo_highlight_color">
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            app:neomorph_view_type="circular"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="0dp"
            app:neomorph_background_color="@color/neo_icon_color"
            app:neomorph_shadow_color="@color/neo_shadow_color"
            app:neomorph_highlight_color="@color/neo_highlight_color">
            <ImageButton
                android:id="@+id/button_send_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_message"
                android:background="@null"
                android:contentDescription="@string/send_message_button_description"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:neomorph_view_type="circular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="16dp"
            app:neomorph_background_color="@color/neo_background_color"
            app:neomorph_shadow_color="@color/neo_shadow_color"
            app:neomorph_highlight_color="@color/neo_highlight_color">
            <ImageButton android:id="@+id/button_message2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pain"
                android:background="@null"
                android:contentDescription="@string/pain_button_description"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:neomorph_view_type="circular"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="16dp"
            app:neomorph_background_color="@color/neo_background_color"
            app:neomorph_shadow_color="@color/neo_shadow_color"
            app:neomorph_highlight_color="@color/neo_highlight_color">
            <ImageButton android:id="@+id/button_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_bathroom"
                android:background="@null"
                android:contentDescription="@string/bathroom_button_description"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    </LinearLayout>
</RelativeLayout>