<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_message_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:textColor="#F00"
        android:textStyle="bold"
        android:textSize="40sp"
        android:hint="@string/message_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/text_message"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageButton android:id="@+id/button_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_bathroom"
            android:padding="0dp"
            android:contentDescription="@string/bathroom_button_description"/>

        <ImageButton android:id="@+id/button_message2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_pain"
            android:contentDescription="TODO" />


        <ImageButton android:id="@+id/button_message3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_water"
            android:contentDescription="TODO"/>

        <ImageButton android:id="@+id/button_message4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_food"
            android:contentDescription="TODO"/>

        <ImageButton
            android:id="@+id/button_send_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_message"
            android:contentDescription="TODO" />

    </LinearLayout>

</RelativeLayout>